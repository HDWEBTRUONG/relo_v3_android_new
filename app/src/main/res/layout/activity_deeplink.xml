<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/bg_toolbar">
        <LinearLayout
            android:id="@+id/lnToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvMenuTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvMenuSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xlarge"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/viewPaddingHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivMenuRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_close"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_10dp"
                    android:paddingLeft="@dimen/_10dp"
                   />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ProgressBar
        android:id="@+id/horizontalProgress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="gone"
        android:layout_gravity="center"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <net.fukuri.memberapp.memberapp.views.MyWebview
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </net.fukuri.memberapp.memberapp.views.MyWebview>
            <include layout="@layout/bottombar_deeplink"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>